@model VehicleLocation.Models.Vehicle
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">


            @if (SignInManager.IsSignedIn(User))
            {




                <a asp-controller="" asp-action="chooseyourbus" class="btn btn-warning btn-lg btn-block font-weight-bold rounded-pill">
                    Viwe Your Bus Location
                </a>
                <a asp-controller="home" asp-action="adduser" class="btn btn-warning btn-lg btn-block font-weight-bold rounded-pill">AddUser</a>
                <a asp-controller="home" asp-action="CatchLocation" class="btn btn-warning btn-lg btn-block font-weight-bold rounded-pill">CatchLocation</a>
            }
            </div>
    </div>
</div>
